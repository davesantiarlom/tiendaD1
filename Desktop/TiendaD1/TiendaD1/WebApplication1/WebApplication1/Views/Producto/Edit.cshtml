@model WebApplication1.Models.Producto

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label class="control-label">Descrición</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Código</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input class="form-check-input" asp-for="Active" />
            </div>
            <div>
                @if (string.IsNullOrEmpty(Model.Ruta))
                {
                    <img src="~/image/producto-sin-foto.png"
                         class="rounded-circle"
                         height="100" width="100"
                         asp-append-version="true" />
                }
                else
                {
                    <img src="~/image/@Model.Ruta"
                         class="rounded-circle"
                         height="100" width="100"
                         asp-append-version="true" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
