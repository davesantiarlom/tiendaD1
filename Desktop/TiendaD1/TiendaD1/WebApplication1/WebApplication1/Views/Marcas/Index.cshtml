@model IEnumerable<WebApplication1.Models.Marca>

@{
    ViewData["Title"] = "Administración de Marcas";
}

    <h3>@ViewData["Title"]</h3>

<p>
    <a asp-action="Create"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
